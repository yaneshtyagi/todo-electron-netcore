<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - todo_e_nc_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site_dark.css" />
    <style>
        html, body {
            height: 100%
        }

        .workspaces {
            float: left;
            background-color: #111;
            width: 10%;
            min-width: 150px;
            max-width: 350px;
            height: 100%;
            min-height: 100%;
        }

        .workspace-item {
            box-sizing: border-box;
            width: 100%;
            vertical-align: middle;
            margin: 25px 0px;
        }

        .workspace-item-img {
            max-width: 50px;
            width: 50px;
            height: 50px;
            margin: 10px;
            vertical-align: middle;
            border-style: none;
        }

        .workspace-item-name {
            padding-left: 10px;
            margin-bottom: 20px;
            vertical-align: middle;
        }

        hr {
            background-color: #333;
            width: 100%;
            height: 1px;
            border: none;
            margin: 0px;
        }
    </style>
</head>
<body style="background-color: #222;">
    <div class="navbar1 workspaces">
        <div class="workspace-item">
            <span class="workspace-item-img"><img src="img/personal-workspace-icon.png" width="50" height="50" /></span>
            <span class="workspace-item-name">Personal</span>
        </div><hr />
        <div class="workspace-item">
            <span class="workspace-item-img"><img src="img/office-workspace-icon.png" width="50" height="50" /></span>
            <span class="workspace-item-name">Work</span>
        </div><hr />
        <div class="workspace-item">
            <span class="workspace-item-img"><img src="img/community-workspace-icon.png" width="50" height="50" /></span>
            <span class="workspace-item-name">Community</span>
        </div>

    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - todo_e_nc_web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
